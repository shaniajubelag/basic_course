<% provide(:title, @user.name) %>
<div class="container pt-4 content">
    <div class="row">
        <div class="col-3">
            <aside class="span">
                <section>
                    <h1>
                        <%= render 'shared/user_info' %>
                    </h1>
                </section>
                <section>
                    <%= render 'shared/stats' %>
                </section>
            </aside>
        </div>
        <div class="col-9">
            <div class="microposts">
                <%= render 'follow_form' if logged_in? %>
                <% if @user.microposts.any? %>
                    <h3>Microposts (<%= @user.microposts.count %>)</h3>
                    <ol class="microposts-lists">
                        <!-- found in the microposts folder, under a partial file -->
                        <%= render @microposts %>
                    </ol>
                    <div class="row">
                        <div class="container">
                            <%= will_paginate @microposts %>
                        </div>    
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>